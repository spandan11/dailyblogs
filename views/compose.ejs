<%- include("partials/header") -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" name="postTitle" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="postContent">Post</label>
            <textarea name="postContent" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>

    <%- include("partials/footer") -%>